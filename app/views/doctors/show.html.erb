<h2>Dr. <%= @doctor.name %>'s Appointments</h2>

<ul>
<% @doctor.appointments.each do |appt| %>
  <li>
    <%= appt.appointment_datetime.strftime("%B %d, %Y")+" at "+appt.appointment_datetime.strftime("%H:%M")  %>:
    <%= link_to appt.patient.name, patient_path(appt.patient) %>
  </li>
<% end %>
</ul>
